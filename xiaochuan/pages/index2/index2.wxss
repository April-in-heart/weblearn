/* pages/index2/index2.wxss */
.first{
  /* z-index要大于等于0点击事件才能有效果 */
  z-index: 0;
  position: relative;
}
.top{
  font-size: 25rpx;
  margin: 50rpx 20rpx 20rpx 20rpx;
  color: rgb(180, 180, 180);
}
.box{
  height: 100%;
  width: 85%;
  display: flex;
  flex-direction: column;
  margin: 5%;
  padding: 2.5%;
  /* box-shadow:盒阴影 */
  box-shadow: 5rpx 5rpx 25rpx 5rpx gainsboro;
}
.huikuang{
  height: 35rpx;
  width: 100rpx;
  font-size: 25rpx;
  color:#fff;
  margin: 20rpx;
  margin-bottom: 50rpx;
  text-align: center;
  background:rgb(187, 186, 184);
  border-radius:8rpx;/*圆角边框*/
}
.question{
  font-size: 40rpx;
}
/* .answer{

} */
.btn1{
  /*每个高30px*/
  height: 40px;
  /*垂直居中*/
  line-height: 40px;
  /*再设上下padding增加高度，总高42px*/
  margin: 10rpx;
  padding: 10rpx;
  border: 1px solid rgb(216, 215, 214);
  /*背景色变成白色*/
  background:#fff;
  font-size: 30rpx;
  
}
.btn2{
  /*每个高30px*/
  height: 40px;
  /*垂直居中*/
  line-height: 40px;
  /*再设上下padding增加高度，总高42px*/
  margin: 10rpx;
  padding: 10rpx;
  border: 1px solid #4169e1;
  font-size: 30rpx;
  background:rgb(187, 186, 184);
}
.btGroup{
  display: flex;
  flex-direction: row;
}
/* 下方按钮 */
.bt1{
  margin: 20rpx;
  background:rgb(187, 186, 184);
  font-weight: 100;
  color: #fff;
}
.bt2{
  margin: 20rpx;
  background:#4169e1;
  font-weight: 100;
  color: #fff;
}

.sidebar{
  position: absolute;
  top: 40%;
  right: 0%;
  z-index: 1;
}
.conts {
  writing-mode: vertical-lr;
  padding-top: 30rpx;
  height: 220rpx;
  width: 50rpx;
  font-size: 30rpx;
  color:#fff;
  text-align: center;
  background:#4169e1;
  border-radius:8rpx;/*圆角边框*/
  display: -webkit-box;
}
.hide {
  -webkit-box-orient: vertical;
}
