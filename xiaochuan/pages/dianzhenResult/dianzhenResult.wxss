/* pages/fangan/fangan.wxss */
.out{
  padding: 15rpx;
  box-sizing:border-box;
  background: #eee;
}
.banner{
  height: 20%;
  width: 100%;
}
.row{
  display: flex;
  background: #fff;
  
  margin-bottom: 5rpx;
}
.pic{
  flex: 1;
}
.pic image{
  padding-left: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.text{
  flex: 6;
  display: flex;
  border-bottom:1px solid rgb(240, 240, 240);
  
  flex-direction: column;
  justify-content: flex-start;
}

.text .title{
  padding-top: 5rpx;
  font-size: 38rpx;

}
.text .content{
  padding-right: 20rpx;
  font-size: 30rpx;
  color: #999;
}
.btn{
  width:60%;
  height: 10%;
  
  background-color:#7294AE;
  color:#fff; 
  display:flex; 
  flex-direction: column;
  justify-content:center;
}

.topback{
  width: 100%;
  height: 6vh;
  background-color:  #3399cc;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 35rpx;
}

/* pages/heart/heart.wxss */
.echart_panel {
  width: 100%;
  height: 40vh;
  margin: 50px 0;
}


.label-box {
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  margin: 2rpx 20rpx;
  color: #2089dc;
}

