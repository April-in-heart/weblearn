/* pages/fangan/fangan.wxss */
.out{
  padding: 15rpx;
  box-sizing:border-box;
  background: #eee;
}
.banner{
  height: 20%;
  width: 100%;
}
.row{
  display: flex;
  background: #fff;
  
  margin-bottom: 5rpx;
}
.pic{
  flex: 1;
}
.pic image{
  padding-left: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.text{
  flex: 6;
  display: flex;
  border-bottom:1px solid rgb(240, 240, 240);
  
  flex-direction: column;
  justify-content: flex-start;
}

.text .title{
  padding-top: 5rpx;
  font-size: 38rpx;

}
.text .content{
  padding-right: 20rpx;
  font-size: 30rpx;
  color: #999;
}
.btn{
  width:60%;
  height: 10%;
  
  background-color:#7294AE;
  color:#fff; 
  display:flex; 
  flex-direction: column;
  justify-content:center;
}