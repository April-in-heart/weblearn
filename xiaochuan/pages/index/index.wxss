/**index.wxss**/
.navigation{
  height: 450rpx;
  display: flex;
  align-items: center;
  justify-content: center; 
  border-radius: 5%;
  box-shadow: 0px 3px 5px 5px rgba(49, 49, 49, 0.15);
}
.banner{
  box-sizing: border-box;
}
.out{
  padding: 15rpx;
  box-sizing:border-box;
  background: #eee;
}
.row{
  display: flex;
  background: #fff;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.pic{
  flex: 4;

}
.pic image{
  width: 100%;
  height: 100%;
  border-radius: 5%;
}
.text{
  flex: 6;
  border-bottom:1px solid rgb(240, 240, 240);
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.text .title{
  padding-top: 5rpx;
  font-size: 38rpx;

}
.text .content{
  font-size: 25rpx;
  color: #999;
 
}
.text .doctor{
  color: rgb(134, 166, 180);
  font-size: 20rpx;
  padding-bottom: 20rpx;
}