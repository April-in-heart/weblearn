
.loading{
  height: 100vh;
  background-color: silver;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
progress{
  width: 80%;
}

.container{
  display: flex;
  /* 横向排列 */
  flex-direction: row;
  /* 是否允许换行 */
  flex-wrap: wrap;
}
.box{
  width: 50%;
  height: 400rpx;
  display: flex;
  /* 垂直布局 */
  flex-direction: column;
  /* 水平居中 */
  align-items: center;
  /* 分散布局 */
  justify-content: space-around;
}
image{
  width: 200rpx;
  height: 300rpx;
}
text{
  text-align: center;
}