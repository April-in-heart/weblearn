/**index.wxss**/
.box{
  border: 2rpx solid #00b26a;
  margin: 20rpx;
  padding: 20rpx;
  color: #00b26a;
}
.box .title{
  font-size: 18pt;
  font-weight: bold;
  /* 虚线 */
  border-bottom: 2rpx dashed #00b26a;
  padding-bottom: 10rpx;
}
.box .content{
  font-size: 12pt;
  margin: 20rpx 0;
  line-height: 80rpx;
}
.bar{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16pt;
}
.bar .avatar{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
map{
  width: 100%;
  height: 400rpx;
}
button{
  margin: 20rpx;
  color: #fff;
  background-color: #00b26a;
}